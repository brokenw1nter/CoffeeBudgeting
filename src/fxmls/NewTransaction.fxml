<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SceneController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true" />
      <MenuBar fx:id="menuBar" prefHeight="0.0" prefWidth="450.0">
        <menus>
          <Menu mnemonicParsing="false" text="Coffee Budgeting" />
        </menus>
      </MenuBar>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutY="25.0" prefHeight="75.0" prefWidth="450.0" text="New Transaction">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
      </Label>
      <Button alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="525.0" mnemonicParsing="false" onMouseClicked="#cancelTransaction" prefHeight="75.0" prefWidth="188.0" text="Cancel">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button alignment="CENTER" contentDisplay="CENTER" layoutX="237.0" layoutY="525.0" mnemonicParsing="false" onMouseClicked="#confirmTransaction" prefHeight="75.0" prefWidth="188.0" text="Confirm">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
