<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SceneController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true" />
      <MenuBar fx:id="menuBar" prefHeight="0.0" prefWidth="450.0">
        <menus>
          <Menu mnemonicParsing="false" text="Coffee Budgeting">
            <items>
                  <MenuItem mnemonicParsing="false" text="New" />
                  <MenuItem mnemonicParsing="false" text="Load" />
                  <MenuItem mnemonicParsing="false" text="Save" />
              <MenuItem mnemonicParsing="false" onAction="#quitApplication" text="Quit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Button alignment="CENTER" contentDisplay="CENTER" layoutY="25.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="&lt;">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Label fx:id="monthYearDisplay" alignment="CENTER" contentDisplay="CENTER" layoutX="75.0" layoutY="25.0" prefHeight="75.0" prefWidth="300.0" text="Month and Year">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Button alignment="CENTER" contentDisplay="CENTER" layoutX="375.0" layoutY="25.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="&gt;">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
